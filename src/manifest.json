{
    "name": "WeBeep Last Edit",
    "description": "Adds the last edit date in WeBeep pages",
    "version": "1.0",
    "manifest_version": 3,
    "homepage_url": "https://github.com/lucamora/webeep-last",
    
    "content_scripts": [
        {
            "matches": [
                "*://webeep.polimi.it/mod/folder/view.php?id=*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "style.css"
            ],
            "run_at": "document_idle"
        }
    ],

    "action": {
        "default_title": "WeBeep Last Edit",
        "default_icon": {
            "16": "/images/icon16.png",
            "24": "/images/icon24.png",
            "32": "/images/icon32.png",
            "48": "/images/icon48.png",
            "128": "/images/icon128.png"
        }
    },
    "icons": {
        "16": "/images/icon16.png",
        "24": "/images/icon24.png",
        "32": "/images/icon32.png",
        "48": "/images/icon48.png",
        "128": "/images/icon128.png"
    }
}  